<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/fullname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/ic_action_name"  />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="Full Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fullname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:text="Email"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emailUser"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailText"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        tools:text="xxxx@gmail.com" />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailUser"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:text="Username"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/usernameUser"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameText"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        tools:text="Piyo - Piyo" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/emailText"
        android:text="Back"
        android:textColor="@android:color/white"
        android:theme="@style/ButtonNegative" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_back"
        android:layout_alignBottom="@+id/button_back"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Edit"
        android:textColor="@android:color/white"
        android:theme="@style/ButtonPositive" />

</RelativeLayout>